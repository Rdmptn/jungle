<section>

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>

        <div class="form-group">
          <%= label_tag :email %>
          <div><%= text_field_tag :email, nil, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <div><%= password_field_tag :password, nil, class: 'form-control' %></div>
        </div>

        <%= submit_tag "Login",  class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
